{
  "name": "@ifyour/deeplx",
  "type": "module",
  "version": "0.1.17",
  "author": "ifyour",
  "module": "dist/deeplx.esm.js",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "bun --watch ./src/devServer.ts",
    "test": "tsdx test",
    "build": "tsup src/index.ts --minify --treeshake --format esm",
    "build-deno": "tsup deno.ts --minify --treeshake --format esm",
    "start": "tsdx watch",
    "lint": "tsdx lint",
    "lintfix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/deeplx.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/deeplx.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.5",
    "hono": "^4.6.1",
    "husky": "^9.1.6",
    "jest-fetch-mock": "^3.0.3",
    "size-limit": "^11.1.5",
    "terser": "^5.32.0",
    "tslib": "^2.7.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.10.0"
}
